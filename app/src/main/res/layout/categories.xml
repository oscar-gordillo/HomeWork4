<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">


    <ImageButton
        android:id="@+id/ib_food"
        android:layout_width="152dp"
        android:layout_height="110dp"
        android:layout_marginTop="20dp"
        android:scaleType="fitCenter"
        android:onClick="onButtonClick"
        app:layout_constraintStart_toStartOf="@+id/ib_clothing"
        app:layout_constraintTop_toBottomOf="@+id/textView7"
        app:srcCompat="@drawable/food" />

    <ImageButton
        android:id="@+id/ib_beauty"
        android:layout_width="152dp"
        android:layout_height="110dp"
        android:layout_marginTop="20dp"
        android:onClick="onButtonClick"
        android:scaleType="fitCenter"
        app:layout_constraintStart_toStartOf="@+id/ib_electronics"
        app:layout_constraintTop_toBottomOf="@+id/textView5"
        app:srcCompat="@drawable/beauty" />

    <ImageButton
        android:id="@+id/ib_clothing"
        android:layout_width="152dp"
        android:layout_height="110dp"
        android:onClick="onButtonClick"
        android:layout_marginStart="200dp"
        android:layout_marginTop="43dp"
        android:scaleType="fitCenter"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView4"
        app:srcCompat="@drawable/clothing" />

    <TextView
        android:id="@+id/tv_welcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text=""
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="104dp"
        android:layout_marginTop="66dp"
        android:text="Shop by categories"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/ib_electronics"
        android:layout_width="152dp"
        android:layout_height="110dp"
        android:layout_marginStart="30dp"
        android:onClick="onButtonClick"
        android:layout_marginTop="43dp"
        android:scaleType="fitCenter"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView4"
        app:srcCompat="@drawable/electronics" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Electronics"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/ib_electronics"
        app:layout_constraintTop_toBottomOf="@+id/ib_electronics" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Clothing"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/ib_clothing"
        app:layout_constraintTop_toBottomOf="@+id/ib_clothing" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Beauty"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/ib_beauty"
        app:layout_constraintTop_toBottomOf="@+id/ib_beauty" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Food"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintBaseline_toBaselineOf="@+id/textView8"
        app:layout_constraintStart_toStartOf="@+id/ib_food" />

</androidx.constraintlayout.widget.ConstraintLayout>